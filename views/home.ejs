<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Simple Note Taking App</title>
    <!-- Link to our custom CSS file -->
    <link rel="stylesheet" href="/home.css">
</head>

<body>
    <div class="container">
        <h1>Note Taking App</h1>

        <!-- Display list of notes -->
        <div id="notes-list">
            <% if (notes.length===0) { %>
                <p>No notes available. Add a new note below!</p>
                <% } else { %>
                    <ul>
                        <% notes.forEach(note=> { %>
                            <li>
                                <strong>
                                    <%= note.title %>
                                </strong>
                                <p>
                                    <%= note.content %>
                                </p>
                                <!-- Edit and Delete buttons -->
                                <a href="/notes/<%= note.id %>/edit">Edit</a>
                                <!-- The delete form uses POST method -->
                                <form action="/notes/<%= note.id %>/delete" method="POST" class="delete-form">
                                    <button type="submit" onclick="return confirmDelete();">Delete</button>
                                </form>
                            </li>
                            <% }); %>
                    </ul>
                    <% } %>
        </div>

        <!-- Form to add a new note -->
        <div id="new-note">
            <h2>Add a New Note</h2>
            <form action="/notes" method="POST">
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" required>
                <br>
                <label for="content">Content:</label>
                <textarea name="content" id="content" rows="4" required></textarea>
                <br>
                <button type="submit">Add Note</button>
            </form>
        </div>
    </div>

    <!-- Include our custom JS file -->
    <script src="/home.js"></script>
</body>

</html>